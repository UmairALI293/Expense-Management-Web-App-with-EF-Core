@model IEnumerable<TEK_Expense_Tracker.Models.Employee>

<h2>Employees</h2>

<br />
<table class="table table-striped">
    <thead>
        <tr> 
            <th>Name</th>
            <th>Department</th>
            <th style='text-align: center;'>Action</th>
        </tr>
    </thead>
    <tbody class="tbody">
        
    </tbody>
</table>

<button type="button" id="Add" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add Employee</button>

<!-- Add Employee Modal -->
<div class="modal-body" id="AddEmployee" style="display: none;"  role="dialog">
                <form id="addForm">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="department">Department:</label>
                        <input type="text" class="form-control" id="department" name="department" required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
<!-- Edit Employee Modal -->
<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Employee</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="editEmployeeContent">
                <form id="editForm">
                    <div class="form-group">
                        <label for="editName">Name:</label>
                        <input type="text" class="form-control" id="editName" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="editDepartment">Department:</label>
                        <input type="text" class="form-control" id="editDepartment" name="Department" required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        console.log("Script loaded");

        $(document).ready(function () {
            // Get all employees
            function getAllEmployees() {
                $.ajax({
                    type: "GET",
                    url: "/Home/List",
                    success: function (data) {
                        $(".tbody").empty();
                        $.each(data, function (index, item) {
                            $(".tbody").append(
                                "<tr>" +                
                                "<td>" + item.name + "</td>" +
                                "<td>" + item.department + "</td>" +
                                "<td style='text-align: center;'>" +
                                "<button type='button' class='mx-2 btn btn-info' onclick='editEmployee(" + item.id + ")'>Edit</button>" +
                                "<button type='button' class='btn btn-danger' onclick='deleteEmployee(" + item.id + ")'>Delete</button>" + 
                                "</td>" +
                                "</tr>"
                            );
                        });

                    }
                });
            }

            console.log("Document ready");

            getAllEmployees();

            // Add employee
            $(document).ready(function () {
                $("#Add").click(function () {
                    $("#AddEmployee").slideToggle();
                });

                $("#addForm").submit(function (event) {
                    event.preventDefault();
                    var formData = {
                        name: $("#name").val(),
                        department: $("#department").val()
                    };
                    if (formData.name == "" && formData.department == " "){
                        alert ("please enter data")
                    }
                    else{
                        console.log(formData); // Log the formData to check if it's correct
                        $.ajax({
                            type: "POST",
                            url: "/Home/Add",
                            data: JSON.stringify(formData),
                            contentType: "application/json",
                            success: function (data) {
                                swal.fire({
                                    icon: "success",
                                    text: "Added Successfully"
                                    //footer: '<a href="#">Why do I have this issue?</a>'
                                });
                                $("#addModal").modal("hide");
                                getAllEmployees();
                                $("#name").val("")
                                $("#department").val("")

                            },
                            error: function (xhr, status, error) {
                                console.error(xhr.responseText); // Log any error
                            }
                        });
                    }
                    
                });
            });


            // Get employee by id
            window.editEmployee = function (id) {
                $.ajax({
                    type: "GET",
                    url: "/Home/GetbyID?id=" + id,
                    success: function (data) {
                        $("#editId").val(data.id);
                        $("#editName").val(data.name);
                        $("#editDepartment").val(data.department);
                        $("#editModal").modal("show");
                    }
                });
            }

            // Update employee
            $(document).on('submit', '#editForm', function (event) {
                event.preventDefault();
                var formData = {
                    Id: $("#editId").val(),
                    Name: $("#editName").val(),
                    Department: $("#editDepartment").val()
                };
                $.ajax({
                    type: "POST",
                    url: "/Home/Update",
                    data: JSON.stringify(formData),
                    contentType: "application/json",
                    success: function (data) {
                        swal.fire({
                            icon: "success",
                            text: " Updated Successfully"
                            //footer: '<a href="#">Why do I have this issue?</a>'
                        });
                        $("#editModal").modal("hide");
                        
                        getAllEmployees();

                    }
                });
            });

            // Delete employee
            window.deleteEmployee = function (id) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your file has been deleted.",
                            icon: "success"
                        });
                        $.ajax({
                            type: "POST",
                            url: "/Home/Delete?id=" + id,
                            success: function (data) {
                                getAllEmployees();
                            }
                        }); 
                    }
                });
            }

        });
    </script>
}
