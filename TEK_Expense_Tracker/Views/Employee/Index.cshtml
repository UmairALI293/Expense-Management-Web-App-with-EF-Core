@model IEnumerable<TEK_Expense_Tracker.Models.Employee>
<h2>Employees</h2>
<table class="table">
    <thead>
        <tr>
            <th colspan="4" style="text-align:center">Name</th>
            <th colspan="4" style="text-align:center">Department</th>
            <th colspan="2" style="text-align:center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td colspan="4" style="text-align:center">@item.Name</td>
                <td colspan="4" style="text-align:center">@item.Department</td>
                @*<td colspan="2" style="text-align:center">
                    @if (item.Expenses == null)
                    {
                        @Html.Raw("Null");
                    }
                    else
                    {
                        @item.Expenses
                    }

                </td>*@
                <td colspan="2" style="text-align:center">
                    <div >
                        <a asp-action="EditEmp" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                        <a asp-controller="Expense" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                        <a asp-action="DeleteEmp" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>



                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddEmp" class="btn btn-primary">Add Employee</a>