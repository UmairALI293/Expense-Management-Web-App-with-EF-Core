@model IEnumerable<TEK_Expense_Tracker.Models.Employee>
<h2>Employees</h2>
<br />
<div class="table-container" style="overflow-x:auto">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align:center" colspan="4">Name</th>
                <th style="text-align:center" colspan="4">Department</th>
                <th style="text-align:center" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center" colspan="4">@item.Name</td>
                    <td style="text-align:center" colspan="4">@item.Department</td>
                    <td style="text-align:center" colspan="2">
                        <div>
                            <a asp-action="EditEmp" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                            <a asp-controller="Expense" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                            <a asp-action="DeleteEmp" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="AddEmp" class="btn btn-primary">Add Employee</a>

